<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lele.smartport">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.PotActivity" />
        <activity
            android:name=".activity.LibraryActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.WebViewActivity" />
        <activity
            android:name=".activity.SelectActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".activity.HelpActivity"></activity>
    </application>

</manifest>