<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:id="@+id/layout_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_bottom"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:background="@color/green"
        android:layout_width="match_parent">
        <Button
            android:id="@+id/b_register"
            android:textSize="20sp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:background="#00000000"
            android:textColor="#ffffff" />
        <Button
            android:background="@drawable/face"
            android:layout_gravity="center|center_vertical"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginBottom="30sp"
            android:layout_marginTop="30sp"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:gravity="center"
            android:textSize="30sp" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_marginStart="35sp"
            android:layout_marginEnd="35sp">
            <ImageView
                android:id="@+id/img_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/edit_user"
                android:contentDescription="@string/_null"
                android:layout_gravity="start|center_vertical"
                app:layout_constraintHorizontal_weight="2"
                android:src="@drawable/user"/>
            <EditText
                android:id="@+id/edit_user"
                android:layout_height="match_parent"
                android:layout_gravity="end|bottom"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_user"
                android:textColorHint="@color/green"
                app:layout_constraintHorizontal_weight="8"
                android:text="admin"
                android:hint="admin"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/green" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:layout_marginStart="35sp"
            android:layout_marginEnd="35sp">
            <ImageView
                android:id="@+id/img_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/edit_pwd"
                android:contentDescription="@string/_null"
                android:layout_gravity="start|center_vertical"
                app:layout_constraintHorizontal_weight="2"
                android:src="@drawable/pwd"/>
            <EditText android:id="@+id/edit_pwd"
                android:layout_height="match_parent"
                android:layout_gravity="end|bottom"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_pwd"
                android:textColorHint="@color/green"
                app:layout_constraintHorizontal_weight="8"
                android:text="admin"
                android:hint="admin"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/green" />
        </android.support.constraint.ConstraintLayout>
        <Button
            android:id="@+id/b_login"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="#ffffff"
            android:text="登录"
            android:background="@color/green"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
