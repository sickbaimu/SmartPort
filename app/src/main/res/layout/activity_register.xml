<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/content"
        app:layout_constraintVertical_weight="9"
        android:orientation="horizontal"
        android:background="@color/green">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:text="新用户注册" />
        <Button
            android:id="@+id/b_back"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="end|center_vertical"
            android:text="返回" />
    </RelativeLayout>
    <android.support.percent.PercentFrameLayout
        android:id="@+id/content"
        app:layout_constraintTop_toBottomOf="@+id/topbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="91"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_gravity="center"
        android:alpha="0.9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="30dp"
                android:text="注册"
                android:gravity="center"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp" />
            <View
                android:alpha="0.8"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/v_white"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="15sp">
                <TextView
                    android:id="@+id/text_user"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/edit_user"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="3"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    app:layout_widthPercent="25%"
                    app:layout_heightPercent="70%"
                    android:gravity="center"
                    android:text="@string/username"/>
                <EditText
                    android:id="@+id/edit_user"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:layout_constraintLeft_toRightOf="@+id/text_user"
                    app:layout_constraintRight_toRightOf="parent"
                    android:hint="@string/_null"
                    app:layout_constraintHorizontal_weight="7"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColorHint="@color/green"
                    android:textColor="@color/green" />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="15sp">
                <TextView
                    android:id="@+id/text_pwd"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/edit_pwd"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="3"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    app:layout_widthPercent="25%"
                    app:layout_heightPercent="70%"
                    android:gravity="center"
                    android:text="@string/username"/>
                <EditText
                    android:id="@+id/edit_pwd"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:layout_constraintLeft_toRightOf="@+id/text_pwd"
                    app:layout_constraintRight_toRightOf="parent"
                    android:hint="@string/_null"
                    app:layout_constraintHorizontal_weight="7"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColorHint="@color/green"
                    android:textColor="@color/green" />
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:layout_marginBottom="15sp">
                <TextView
                    android:id="@+id/text_pwd_confirm"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/edit_pwd_confirm"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="3"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    app:layout_widthPercent="25%"
                    app:layout_heightPercent="70%"
                    android:gravity="center"
                    android:text="@string/username"/>
                <EditText
                    android:id="@+id/edit_pwd_confirm"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:layout_constraintLeft_toRightOf="@+id/text_pwd_confirm"
                    app:layout_constraintRight_toRightOf="parent"
                    android:hint="@string/_null"
                    app:layout_constraintHorizontal_weight="7"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:textColorHint="@color/green"
                    android:textColor="@color/green" />
            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/a"/>
            <TextView
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提示信息"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/green"/>
        </LinearLayout>
        <Button
            android:layout_gravity="bottom"
            android:layout_below="@+id/pf_pwd"
            android:id="@+id/b_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:textColor="#ffffff"
            android:text="注册"
            android:background="#119900"
            />
    </android.support.percent.PercentFrameLayout>
</android.support.constraint.ConstraintLayout>
