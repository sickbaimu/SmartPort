<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:id="@+id/relativelayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintVertical_weight="9"
        android:background="@color/green">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/t_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:text="牡丹花" />
        <Button
            android:id="@+id/b_back"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="end|center_vertical"
            android:text="返回" />
        <TextView
            android:layout_below="@+id/t_name"
            android:layout_gravity="bottom"
            android:id="@+id/t_pot"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1号花盆"/>
    </RelativeLayout>
    <ScrollView
        app:layout_constraintVertical_weight="91"
        app:layout_constraintTop_toBottomOf="@+id/relativelayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_gravity="bottom"
        android:alpha="0.9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:contentDescription="@string/_null"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/applogo"/>
            <android.support.constraint.ConstraintLayout
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/text_TEMP"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/C_TEMP"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="4"
                    android:gravity="center|start"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:text="当前温度:"/>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/C_TEMP"
                    app:layout_constraintLeft_toRightOf="@+id/text_TEMP"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    >
                    <Button
                        android:id="@+id/b_left_TEMP"
                        android:background="@drawable/left"
                        app:layout_constraintTop_toBottomOf="@+id/t_TEMP"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/t_range_TEMP"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        app:layout_constraintHorizontal_weight="2"
                        app:layout_constraintVertical_weight="4" />
                    <TextView
                        android:id="@+id/t_TEMP"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="parent"
                        app:layout_constraintLeft_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/t_range_TEMP"
                        app:layout_constraintHorizontal_weight="6"
                        app:layout_constraintVertical_weight="6"
                        android:gravity="center"
                        android:textSize="40sp"
                        android:textColor="@color/green"
                        android:text="20℃"
                        />
                    <Button
                        android:id="@+id/b_right_TEMP"
                        android:background="@drawable/right"
                        app:layout_constraintTop_toBottomOf="@+id/t_TEMP"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/t_range_TEMP"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        app:layout_constraintHorizontal_weight="2"
                        app:layout_constraintVertical_weight="4" />
                    <TextView
                        android:id="@+id/t_range_TEMP"
                        app:layout_constraintLeft_toRightOf="@+id/b_left_TEMP"
                        app:layout_constraintRight_toLeftOf="@+id/b_right_TEMP"
                        app:layout_constraintTop_toBottomOf="@+id/t_TEMP"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center"
                        android:textColor="@color/lightgreen"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        app:layout_constraintVertical_weight="4"
                        app:layout_constraintHorizontal_weight="6"
                        android:layout_gravity="bottom"
                        android:text="建议值：15~25℃"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/text_HUM"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/C_HUM"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="4"
                    android:gravity="center|start"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:text="当前湿度:"/>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/C_HUM"
                    app:layout_constraintLeft_toRightOf="@+id/text_HUM"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    >
                    <Button
                        android:id="@+id/b_left_HUM"
                        android:background="@drawable/left"
                        app:layout_constraintTop_toBottomOf="@+id/t_HUM"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/t_range_HUM"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        app:layout_constraintHorizontal_weight="2"
                        app:layout_constraintVertical_weight="4" />
                    <TextView
                        android:id="@+id/t_HUM"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="parent"
                        app:layout_constraintLeft_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/t_range_HUM"
                        app:layout_constraintHorizontal_weight="6"
                        app:layout_constraintVertical_weight="6"
                        android:gravity="center"
                        android:textSize="40sp"
                        android:textColor="@color/green"
                        android:text="50%"
                        />
                    <Button
                        android:id="@+id/b_right_HUM"
                        android:background="@drawable/right"
                        app:layout_constraintTop_toBottomOf="@+id/t_HUM"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/t_range_HUM"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        app:layout_constraintHorizontal_weight="2"
                        app:layout_constraintVertical_weight="4" />
                    <TextView
                        android:id="@+id/t_range_HUM"
                        app:layout_constraintLeft_toRightOf="@+id/b_left_HUM"
                        app:layout_constraintRight_toLeftOf="@+id/b_right_HUM"
                        app:layout_constraintTop_toBottomOf="@+id/t_HUM"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center"
                        android:textColor="@color/lightgreen"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        app:layout_constraintVertical_weight="4"
                        app:layout_constraintHorizontal_weight="6"
                        android:layout_gravity="bottom"
                        android:text="建议值：40%"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView
                    android:id="@+id/text_PH"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/C_PH"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="4"
                    android:gravity="center|start"
                    android:textSize="20sp"
                    android:textColor="@color/green"
                    android:text="当前PH:"/>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/C_PH"
                    app:layout_constraintLeft_toRightOf="@+id/text_PH"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_weight="6"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    >
                    <Button
                        android:id="@+id/b_left_PH"
                        android:background="@drawable/left"
                        app:layout_constraintTop_toBottomOf="@+id/t_PH"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/t_range_PH"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        app:layout_constraintHorizontal_weight="2"
                        app:layout_constraintVertical_weight="4" />
                    <TextView
                        android:id="@+id/t_PH"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toLeftOf="parent"
                        app:layout_constraintLeft_toRightOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/t_range_PH"
                        app:layout_constraintHorizontal_weight="6"
                        app:layout_constraintVertical_weight="6"
                        android:gravity="center"
                        android:textSize="40sp"
                        android:textColor="@color/green"
                        android:text="7.2"
                        />
                    <Button
                        android:id="@+id/b_right_PH"
                        android:background="@drawable/right"
                        app:layout_constraintTop_toBottomOf="@+id/t_PH"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/t_range_PH"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        app:layout_constraintHorizontal_weight="2"
                        app:layout_constraintVertical_weight="4" />
                    <TextView
                        android:id="@+id/t_range_PH"
                        app:layout_constraintLeft_toRightOf="@+id/b_left_PH"
                        app:layout_constraintRight_toLeftOf="@+id/b_right_PH"
                        app:layout_constraintTop_toBottomOf="@+id/t_PH"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:gravity="center"
                        android:textColor="@color/lightgreen"
                        android:layout_height="0dp"
                        android:layout_width="0dp"
                        app:layout_constraintVertical_weight="4"
                        app:layout_constraintHorizontal_weight="6"
                        android:layout_gravity="bottom"
                        android:text="建议值：8.0%"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/b_change"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20sp"
                android:textColor="#ffffff"
                android:text="更换"
                android:background="@color/green"
                />
            <Button
                android:id="@+id/b_unstall"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="20sp"
                android:textColor="#ffffff"
                android:text="卸载"
                android:background="#ff0000"
                />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
